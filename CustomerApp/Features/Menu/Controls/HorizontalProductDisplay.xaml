<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="CustomerApp.Features.Menu.Controls.HorizontalProductDisplay"
             x:Name="ProductDisplay">
    <StackLayout>
        <!---Product List Header-->
        <StackLayout x:Name="ProductListHeader"
                     Orientation="Horizontal"
                     HorizontalOptions="FillAndExpand"
                     VerticalOptions="Start"
                     Margin="0,20,0,0">
            <Label x:Name="SectionLabel"
                   HorizontalOptions="StartAndExpand"
                   FontSize="22"
                   FontFamily="PoppinsBold"
                   TextColor="Black" />
            <Label x:Name="ShowAllLabel"
                   Text="Show All"
                   HorizontalOptions="EndAndExpand"
                   FontSize="22"
                   TextColor="{StaticResource Primary}" />
        </StackLayout>
        <!---Products Collection View-->
        <CollectionView x:Name="ProductsCollection"
                        SelectionMode="None"
                        VerticalOptions="FillAndExpand"
                        Margin="-10,0,0,0">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Horizontal" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout>
                        <Border Padding="0"
                                Margin="15,10,5,5"
                                WidthRequest="175"
                                BackgroundColor="{StaticResource Tertiary}"
                                Stroke="Gray"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 15">
                            <Border.Shadow>
                                <Shadow Radius="25"
                                        Opacity="0.2" />
                            </Border.Shadow>
                            <Grid RowDefinitions="Auto,Auto,Auto">
                                <Border Grid.Row="0"
                                        StrokeThickness="0"
                                        BackgroundColor="{StaticResource White}"
                                        Padding="0"
                                        Margin="-1">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="15" />
                                    </Border.StrokeShape>
                                    <Image Source="soda_placeholder.jpeg"
                                           Aspect="Center"
                                           HeightRequest="150" />
                                </Border>
                                <Label Grid.Row="1"
                                       HorizontalOptions="FillAndExpand"
                                       Text="{Binding Name}"
                                       FontSize="Small"
                                       FontFamily="PoppinsBold"
                                       TextColor="{StaticResource White}"
                                       LineBreakMode="NoWrap"
                                       Margin="10,10,10,10" />
                            </Grid>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={x:Reference ProductDisplay}, Path=DetailsCommand}"
                                    CommandParameter="{Binding .}" />
                            </Border.GestureRecognizers>
                        </Border>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentView>
