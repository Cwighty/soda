<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CustomerApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:CustomerApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Featured"
             Icon="home.png"
             Route="FeaturePage">
            <ShellContent ContentTemplate="{DataTemplate views:FeaturePage}" />
        </Tab>
        <Tab Title="Menu"
             Icon="black_drink_small.png"
             Route="MenuPage">
            <ShellContent ContentTemplate="{DataTemplate views:MenuPage}" />
        </Tab>
        <Tab Title="Cup Holder"
             Icon="cup_holder.png"
             Route="CartPage">
            <ShellContent ContentTemplate="{DataTemplate views:CartPage}" />
        </Tab>
        <Tab Title="Profile"
             Icon="profile.png"
             Route="ProfilePage">
            <ShellContent ContentTemplate="{DataTemplate views:ProfilePage}" />
        </Tab>
    </TabBar>
</Shell>
