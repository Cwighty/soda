@page "/productmanagement"
@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Components
@using Microsoft.Extensions.Logging
@using SodaShared.Services;
@inject OrderService orderService

<PageTitle>Product Management</PageTitle>


<div>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="card shadow mb-4">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-cup-straw"></i> Product Management</h5>
                <p class="card-text">View and manage all of your products.</p>
                <a href="/products" class="btn btn-primary"><i class="bi bi-gear"></i> Manage Products</a>
            </div>
        </div>
        <div class="card shadow mb-4">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-cup-straw"></i> Add-Ons Management</h5>
                <p class="card-text">View and manage your drink add-ons.</p>
                <a href="/addons" class="btn btn-primary"><i class="bi bi-gear"></i> Manage Add-Ons</a>
            </div>
        </div>
        <div class="card shadow mb-4">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-cup-straw"></i> Base Management</h5>
                <p class="card-text">View and manage your drink bases.</p>
                <a href="/bases" class="btn btn-primary"><i class="bi bi-gear"></i> Manage Drink Bases</a>
            </div>
        </div>
        <div class="card shadow mb-4">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-cup-straw"></i> Base Type Management</h5>
                <p class="card-text">View and manage your drink bases types.</p>
                <a href="/basetypes" class="btn btn-primary"><i class="bi bi-gear"></i> Manage Drink Base Types</a>
            </div>
        </div>
        <div class="card shadow mb-4">
            <div class="card-body">
                <h5 class="card-title"><i class="bi bi-cup-straw"></i> Add-On Type Management</h5>
                <p class="card-text">View and manage your drink add-on types.</p>
                <a href="/addontypes" class="btn btn-primary"><i class="bi bi-gear"></i> Manage Drink Add-On Types</a>
            </div>
        </div>
    </div>
</div>

